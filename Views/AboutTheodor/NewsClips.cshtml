@model List<Article>
@{
    ViewData["Title"] = "News Clips";
}
<div class="container text-center">
    <h1 class="mb-4">News Scans</h1>
    <hr class="hr hr-blurry" />
    <div class="pdf-containers">
        @foreach (var article in Model)
        {
            @await Html.PartialAsync("_PartialAdobePDF", article)
        }
    </div>
</div>
<partial name="_AdobePDFScript"></partial>
<script>
    var pdfContainers = document.querySelectorAll('#author');
                pdfContainers.forEach(container => {
                    container.style.display = 'none';
                });
</script>